<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeLayout">

    <ImageView
        android:id="@+id/igView1"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:src="@drawable/satellite"
        />

    <ImageView
        android:id="@+id/igView2"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:src="@drawable/rocket"
        />

    <ImageView
        android:id="@+id/igView3"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20sp"
        android:layout_marginTop="20sp"
        android:src="@drawable/rover"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/igView1"
        android:text="Space Stations"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/igView1"
        android:text="Flights"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/igView1"
        android:text="Rovers"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40sp"
        />
    <TextView
        android:id="@+id/tvView4"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_below="@+id/igView1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="50sp"
        android:background="#00C800"
        android:gravity="center"
        android:text="DCA"
        android:textColor="#455A64"
        android:textSize="40sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvView5"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_below="@+id/igView3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20sp"
        android:layout_marginTop="50sp"
        android:background="#00C800"
        android:paddingStart="10sp"
        android:gravity="center"
        android:text="MARS"
        android:textColor="#455A64"
        android:textSize="40sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/igView6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/igView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70sp"
        android:background="#FFFFFF"
        android:src="@drawable/ig_swap" />

    <Switch
        android:id="@+id/switchView7"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tvView4"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="50sp"
        android:background="#FFAB00"
        android:text="One way"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:padding="20sp"
        />

    <TextView
        android:id="@+id/tvView8"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_below="@+id/switchView7"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="50sp"
        android:background="#FFAB00"
        android:text="1 Traveller"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:padding="20sp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBack"
        android:text="Back"
        android:textSize="20sp"
        android:layout_marginRight="50sp"
        android:layout_alignBaseline="@id/tvView8"
        android:layout_marginTop="50sp"
        android:layout_alignParentEnd="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTask"
        android:text="See constraint layout task on Singapore"
        android:textSize="20sp"
        android:layout_below="@id/tvView8"
        android:layout_marginTop="50sp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>